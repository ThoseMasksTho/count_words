# Название репозитория: "TextAnalyzer-Python"

def count_words(text):
    words = text.split()
    return len(words)

def count_characters(text):
    return len(text)

def count_vowels(text):
    vowels = "aeiou"
    count = 0
    for char in text.lower():
        if char in vowels:
            count += 1
    return count

def reverse_text(text):
    return text[::-1]

# Пример использования функций
input_text = "Hello, world! This is a sample text."

print("Word Count:", count_words(input_text))
print("Character Count:", count_characters(input_text))
print("Vowel Count:", count_vowels(input_text))
print("Reversed Text:", reverse_text(input_text))
